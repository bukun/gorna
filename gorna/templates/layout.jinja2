    <script src="{{ request.static_url('gorna:static/ckeditor.js') }}"></script>
    <script src="{{ request.static_url('gorna:static/samples/js/sample.js') }}"></script>
    <style type="text/css" rel="stylesheet">
        .thumbnails li:nth-child(3n+1) {
            margin-left: 0 !important
            git冲突怎么办;
        }

        .container-fluid {
            width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            border-bottom: 0 !important;
        }

        .input-append {
            float: right;
        }

        .span4 {
            width: 356px !important;
        }

        p.pull-right {
            display: block;
            width: 60px;
            height: 28px;
            float: right;
            margin: 8px 40px 0 0;
        }

        footer {
            text-align: center;
            font-size: 12px;
            line-height: 12px;
            padding-bottom: 30px;
        }
    </style>

    <!-- Custom styles for this scaffold -->
    {#    <link href="{{request.static_url('gorna:static/theme.css')}}" rel="stylesheet">#}

</head>

<body>
<div class="container-fluid">

    <div class="page-header">
        <h1 class="span5">
            人地系统数据库
        </h1>
        <div class="span5 pull-right">
            <form method="get" action="" id="search" style="padding-top:17px;">
                <div class="input-append">
                    <input value="" id="q" name="q" class="span4" placeholder="全文搜索" type="text">
                    <button type="submit" class="btn"><i class="icon-search"></i>搜索</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a data-target=".navbar-responsive-collapse" data-toggle="collapse" class="btn btn-navbar"><span
                                class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></a>
                        <a href="/" class="brand">网站首页</a>
                        <div class="nav-collapse collapse navbar-responsive-collapse">
                            <ul class="nav">
                                <li class="active">
                                    <a href="/FrontPage">FrontPage</a>
                                </li>
                                <li>
                                    <a href="/post/_add">添加Post</a>
                                </li>
                                <li>
                                    <a href="#">链接</a>
                                </li>
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">下拉菜单<strong
                                            class="caret"></strong></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#">下拉导航1</a>
                                        </li>
                                        <li>
                                            <a href="#">下拉导航2</a>
                                        </li>
                                        <li>
                                            <a href="#">其他</a>
                                        </li>
                                        <li class="divider">
                                        </li>
                                        <li class="nav-header">
                                            标签
                                        </li>
                                        <li>
                                            <a href="#">链接1</a>
                                        </li>
                                        <li>
                                            <a href="#">链接2</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            {% if request.user is none %}
                                <p class="pull-right">
                                    <i class="icon-user"></i> <a href="{{ request.route_url('login') }}">Login</a>
                                </p>
                            {% else %}
                                <p class="pull-right">
                                    {{ request.user.name }} <a href="{{ request.route_url('logout') }}">Logout</a>
                                </p>
                            {% endif %}

                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


{% block content %}
{% endblock content %}

